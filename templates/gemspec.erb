Gem::Specification.new do |s|
  s.name        = '<%= gemspec['name'] %>'
  s.version     = '<%= gemspec['info']['version'] %>'
  s.summary     = '<%= gemspec['info']['summary'] %>'
  s.authors     = '<%= gemspec['info']['authors'] %>'
  s.email       = '<%= gemspec['info']['email'] %>'
  s.homepage    = '<%= gemspec['info']['homepage'] %>'
  s.license     = '<%= gemspec['info']['licenses'] %>'

  # Gem Dependencies
  <%- Array(gemspec['dependencies']).each do |dep| -%>
    <%- if dep['version'] != nil -%>
      <%- dep_versions = ", #{Array(dep['version']).map { |s| "'#{s}'"}.join(', ')}" -%>
    <%- end -%>
  s.add_runtime_dependency '<%= dep['gem'] %>'<%= dep_versions unless dep_versions.nil? %>
  <%- end -%>
end
